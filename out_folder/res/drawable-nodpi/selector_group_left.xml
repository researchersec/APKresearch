<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/ep_white_background">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="3.0dip" android:bottomLeftRadius="3.0dip" />
            <solid android:color="@color/ep_pink" />
            <stroke android:width="@dimen/btn_border_size" android:color="@color/ep_white" />
        </shape>
    </item>
    <item android:state_checked="false" android:color="@color/ep_pink">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="3.0dip" android:bottomLeftRadius="3.0dip" />
            <solid android:color="@color/ep_white" />
            <stroke android:width="@dimen/btn_border_size" android:color="@color/ep_white" />
        </shape>
    </item>
</selector>