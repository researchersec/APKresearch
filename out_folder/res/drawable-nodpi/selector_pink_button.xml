<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/ep_gray_disabled_button" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/ep_pink_pressed_button" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/ep_pink_focused_button" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/ep_pink_active_button" />
        </shape>
    </item>
</selector>