<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/ep_white_background">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="3.0dip" android:bottomRightRadius="3.0dip" />
            <solid android:color="@color/ep_pink" />
            <stroke android:width="1.0dip" android:color="@color/ep_white" />
        </shape>
    </item>
    <item android:state_checked="false" android:color="@color/ep_pink">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="3.0dip" android:bottomRightRadius="3.0dip" />
            <solid android:color="@color/ep_white" />
            <stroke android:width="1.0dip" android:color="@color/ep_white" />
        </shape>
    </item>
</selector>