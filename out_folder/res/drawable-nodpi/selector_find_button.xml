<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ep_pink_pressed_button" />
            <corners android:radius="@dimen/offset_4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ep_pink_pressed_button" />
            <corners android:radius="@dimen/offset_4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ep_pink_focused_button" />
            <corners android:radius="@dimen/offset_4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ep_pink_active_button" />
            <corners android:radius="@dimen/offset_4dp" />
        </shape>
    </item>
</selector>