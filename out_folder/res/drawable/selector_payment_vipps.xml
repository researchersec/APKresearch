<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/btn_radius" />
                    <solid android:color="@color/ep_gray_disabled_button" />
                    <stroke android:width="@dimen/btn_border_size" android:color="@color/ep_gray_disabled_button" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_method_vipps" />
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/btn_radius" />
                    <solid android:color="@color/ep_white" />
                    <stroke android:width="@dimen/btn_border_size" android:color="@color/ep_gray_disabled_button" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_method_vipps" />
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/btn_radius" />
                    <solid android:color="@color/ep_white" />
                    <stroke android:width="@dimen/btn_border_size" android:color="@color/ep_gray_disabled_button" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_method_vipps" />
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/btn_radius" />
                    <solid android:color="@color/ep_gray_disabled_button" />
                    <stroke android:width="@dimen/btn_border_size" android:color="@color/ep_gray_icon" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_method_vipps" />
        </layer-list>
    </item>
</selector>