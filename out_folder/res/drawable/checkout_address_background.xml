<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:gravity="center_vertical">
                <shape>
                    <solid android:color="@color/neutral_20" />
                    <corners android:radius="10.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/neutral_40" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <item android:gravity="center_vertical">
                <shape>
                    <corners android:radius="10.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/neutral_80" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false" android:state_enabled="true">
        <layer-list>
            <item android:gravity="center_vertical">
                <shape>
                    <corners android:radius="10.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/neutral_40" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>