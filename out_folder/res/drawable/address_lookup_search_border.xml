<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:padding="@dimen/standard_quarter_margin">
            <stroke android:width="1.0dip" android:color="@color/searchViewBorderColor" />
            <corners android:radius="@dimen/standard_quarter_margin" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:padding="@dimen/standard_quarter_margin">
            <stroke android:width="2.0dip" android:color="?colorPrimary" />
            <corners android:radius="@dimen/standard_quarter_margin" />
        </shape>
    </item>
</selector>