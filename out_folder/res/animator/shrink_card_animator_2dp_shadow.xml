<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="0" android:valueTo="2.0dip" android:propertyName="cardElevation" />
            <objectAnimator android:duration="260" android:valueTo="0.97" android:propertyName="scaleX" />
            <objectAnimator android:duration="260" android:valueTo="0.97" android:propertyName="scaleY" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="260" android:valueTo="2.0dip" android:propertyName="cardElevation" />
            <objectAnimator android:duration="260" android:valueTo="1" android:propertyName="scaleX" />
            <objectAnimator android:duration="260" android:valueTo="1" android:propertyName="scaleY" />
        </set>
    </item>
</selector>