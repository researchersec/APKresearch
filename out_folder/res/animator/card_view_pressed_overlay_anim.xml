<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="260" android:valueTo="0.08" android:propertyName="alpha" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="0" android:valueTo="0" android:propertyName="alpha" />
        </set>
    </item>
</selector>