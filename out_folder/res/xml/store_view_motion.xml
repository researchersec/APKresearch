<?xml version="1.0" encoding="utf-8"?>
<MotionScene
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition app:constraintSetEnd="@layout/store_view_end" app:constraintSetStart="@layout/store_view_view" app:duration="500">
        <OnSwipe app:dragDirection="dragUp" app:onTouchUp="stop" app:touchAnchorId="@id/rvItemList" app:touchAnchorSide="top" />
        <KeyFrameSet>
            <KeyAttribute android:alpha="1.0" app:framePosition="40" app:motionTarget="@id/infoLayout" />
            <KeyAttribute android:alpha="0.0" app:framePosition="80" app:motionTarget="@id/infoLayout" />
            <KeyAttribute android:alpha="1.0" app:framePosition="40" app:motionTarget="@id/ivStoreLogo" />
            <KeyAttribute android:alpha="0.0" app:framePosition="80" app:motionTarget="@id/ivStoreLogo" />
            <KeyAttribute android:alpha="0.0" app:framePosition="80" app:motionTarget="@id/storeViewToolbar" />
            <KeyAttribute android:alpha="1.0" app:framePosition="100" app:motionTarget="@id/storeViewToolbar" />
        </KeyFrameSet>
    </Transition>
</MotionScene>